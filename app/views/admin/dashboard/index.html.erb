<h1 class="text-center"> Dashboard </h1>

<div class="panel row" id="dashboard-panel">
  
  <div class="medium-6 columns">
    <h2> Songs </h2>
    
    <table class="manage_songs">
      <thead>
        <tr>
          <th> Title </th>  
          <th colspan='2'> Manage </th>
        </tr>
      </thead>
      <% @songs.each do | song | %>
        <tr>
          <td> <%= song.title %> </td>
          <td> <%= link_to "Edit", edit_song_path(song) %>  </td>
          <td> <%= link_to "Delete", song, method: :delete, data: { confirm: "Are you sure you want to delete this song?" } %>  </td>
        </tr>
      <% end %>
    </table>

    <%= link_to "Add Song", new_song_path %>
  </div>

  <div class="medium-6 columns">
    <h2> Articles </h2>

    <table class="manage_articles">
      <thead>
        <tr>
          <th> Title </th>  
          <th colspan='2'> Manage </th>
        </tr>
      </thead>
      <% @articles.each do | article | %>
        <tr>
          <td> <%= link_to article.title, article %> </td>
          <td> <%= link_to "Edit", edit_article_path(article) %>  </td>
          <td> <%= link_to "Delete", article, method: :delete, data: { confirm: "Are you sure you want to delete this article?" } %>  </td>
        </tr>
      <% end %>
    </table>

    <%= link_to "Create New Article", new_article_path %>
  </div>
</div>

<div class="row">
  <%= link_to "Manage Account Details", admin_account_path, :class => "medium-6 columns" %>
  <%= link_to "View Contact Log", contacts_path, :class => "medium-6 columns" %>
</div>