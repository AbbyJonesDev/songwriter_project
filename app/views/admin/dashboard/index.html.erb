<h1 class="text-center"> Dashboard </h1>

<div class="panel">
  <h2 class="text-center"> Manage Songs </h2>

  <table class="manage_songs">
    <thead>
      <tr>
        <th> Title </th>  
        <th colspan='3'> Manage </th>
      </tr>
    </thead>
    <% @songs.each do | song | %>
      <tr>
        <td> <%= song.title %> </td>
        <td> <%= link_to "View", song, :class => "view_song_#{song.id}" %>  </td>
        <td> <%= link_to "Edit", edit_song_path(song), :class => "edit_song_#{song.id}" %>  </td>
        <td> <%= link_to "Delete", song, method: :delete, data: { confirm: "Are you sure you want to delete this song?" },
          :class => "delete_song_#{song.id}" %>  </td>
      </tr>
    <% end %>
  </table>

  <%= link_to "Add Song", new_song_path %>
</div>

<div class="panel">
  <h2 class="text-center"> Manage Articles </h2>

  <table class="manage_articles">
    <thead>
      <tr>
        <th> Title </th>  
        <th colspan='3'> Manage </th>
      </tr>
    </thead>
    <% @articles.each do | article | %>
      <tr>
        <td> <%= article.title %> </td>
        <td> <%= link_to "View", article, :class => "view_article_#{article.id}" %>  </td>
        <td> <%= link_to "Edit", edit_article_path(article), :class => "edit_article_#{article.id}" %>  </td>
        <td> <%= link_to "Delete", article, method: :delete, data: { confirm: "Are you sure you want to delete this article?" },
          :class => "delete_article_#{article.id}" %>  </td>
      </tr>
    <% end %>
  </table>

  <%= link_to "Create New Article", new_article_path %>
</div>

<%= link_to "Manage Account Details", admin_account_path %>
