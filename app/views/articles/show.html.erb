<div class="panel">
  <h1>
    <%= @article.title %>
  </h1>

  <p>
    <%=raw @article.content %>
  </p>

  <p>
    <i>Writer:</i>
    <%= @article.writer %>
  </p>

  <p>
    <strong>Keywords:</strong>
    <%= @article.keywords %>
  </p>

  <% if current_admin %>
    <p>
      <strong>Published:</strong>
      <%= @article.published %>
    </p>

    <%= link_to 'Edit', edit_article_path(@article) %> |
  <% end %>

</div>

<%= link_to 'Back', articles_path %>
