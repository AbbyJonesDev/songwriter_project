<article id="single-journal-entry">
  <h1>
    <%= @article.title %>
  </h1>

  <p>
    <%= @article.content.html_safe %>
  </p>

  <p>
    <i>Writer:</i>
    <%= @article.writer %>
  </p>

  <p>
    <strong>Keywords:</strong>
    <%= @article.keywords %>
  </p>

</article>

<br>

<div class="text-center">
  <%= link_to 'Blog Home Page', articles_path %>

  <% if current_admin %>
    <br><br>
    <%= link_to 'Edit Article', edit_article_path(@article) %> |
  <% end %>  
</div>
