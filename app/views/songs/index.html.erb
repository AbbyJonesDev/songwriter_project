<h1 class="text-center"> Songs </h1>

<table class="text-center">
  <thead>
    <tr>
      <th> Title </th>
      <th> Description </th>
      <% if admin_signed_in? %>
        <th colspan=2> Manage </th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= link_to song.title, song %></td>
        <td><%=raw song.writeup %></td>        
        <% if admin_signed_in? %>
          <td> <%= link_to 'Edit', edit_song_path(song) %></td>
          <td><%= link_to 'Delete', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if admin_signed_in? %>
  <%= link_to 'New Song', new_song_path %>
<% end %>

